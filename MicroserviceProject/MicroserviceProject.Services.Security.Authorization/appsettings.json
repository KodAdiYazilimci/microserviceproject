{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Configuration": {
    "Authorization": {
      "DataSource": "Data Source=localhost; Initial Catalog=MicroserviceDB; Integrated Security=true;MultipleActiveResultSets=true"
    },
    "Logging": {
      "RequestResponseLogging": {
        "FileConfiguration": {
          "Path": "D:\\Logs\\MicroserviceProject.Services.Security.Authorization\\",
          "FileName": "RequestResponseLog",
          "Encoding": "UTF-8"
        }
      }
    }
  }
}
